<!DOCTYPE html>
<html>
<head>
    <title><%= title %> </title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
  <body>
  <!-- Include header  -->
  <%- include partials/header %>
    <!-- Displays postin form START-->
    <section class="posting">
      <h1>Post T.I.L</h1>
      <!-- Display message -->
      <% if (messages.postFailMsg) { %>
      <div class="subMessage">
        <p class="message-text"> <%= messages.postFailMsg %></p>
        <div id="message-close"><a href="#"><img src="/img/close.svg"></a></div>
      </div>
      <% } %>
      <% if(isAuthenticated) { %>
      <!-- Post form area -->
      <form action="../posts" method="post" class="post-form">
        <fieldset>
          <legend class="legend">Share T.I.L : Today I Learned</legend>
          <div class="form">
            <div class="title">
              <label for="title">Title</label>
              <input id="title" type="text" name="title" placeholder="title" maxlength="100" required>
            </div>
            <div class="author">
                <label for="author">Author</label>
                <input id="author" type="text" name="author" placeholder="author" maxlength="100" required>
              </div>
            <div class="summary">
              <label for="summary">Summary</label>
              <textarea name="summary" cols="50" rows="5" maxlength="200" placeholder="summary"></textarea>
            </div>
            <div class="body">
              <label for="body">Contents</label>
              <textarea name="body" cols="50" rows="10" maxlength="2000" placeholder="contents"></textarea>
            </div>
            <div class="slug">
              <label for="slug">Slug</label>
              <input type="text" name="slug" placeholder="slug" required>
              <p>! The "slug" is the URL-friendly version of the name. It is ususally all lowercase and contain only letters, numbers, ann hypehns.</p>
            </div>
            <div class="button">
              <button type="submit" class="submit" id="post" value="submit"> Post </button>
            </div>
          </div>
        </fieldset>
      </form>
      <% } else { %>
        <div class="centerMessage">
          <h2>Sorry, you need to sign in for posting</h2>
        </div>
        <div class="btnarea">
          <div class="blinkbtndiv">
              <a class="blinkbtn" href="/signin" title="signin" class="signin">Sign In</a>
          </div>
          <div class="blinkbtndiv">
              <a class="blinkbtn" href="/users" title="signup" class="signup">Sign Up</a>
          </div>
        </div>
      <% } %>
      </section>
    </div>
    <!-- Include footer -->
    <%- include partials/footer %>
    <!-- Include js file link for closing message layer-->
    <%- include partials/layerCloseJS %>
  </body>
</html>